<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="cl.archibaldo.floreantpos.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
                android:id="@+id/ipAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ip_text"
                android:inputType="number"
                android:digits="0123456789."
                android:textSize="14sp"
                />

        <EditText
            android:id="@+id/ipPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/port_text"
            android:inputType="number"
            android:visibility="visible"
            android:maxLength="5"
            android:textSize="14sp"
            />


        <CheckBox
            android:id="@+id/chboxNoPreguntar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chbox_text"
            />

        <Button
            android:id="@+id/btn_conectar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_conectar"
            android:layout_gravity="center"
             />

        <TextView
            android:id="@+id/mensajes"
            android:layout_width="match_parent"
            android:text="@string/mensaje"
            android:layout_height="100dp"
            android:layout_gravity="center">

        </TextView>


    </LinearLayout>

